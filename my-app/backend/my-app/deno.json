{
  "imports": {
    "hono": "jsr:@hono/hono@^4.6.17",
    "@types/pg": "npm:@types/pg@^8.11.11",
    "drizzle-kit": "npm:drizzle-kit@^0.30.2",
    "drizzle-orm": "npm:drizzle-orm@^0.38.4",
    "drizzle-zod": "npm:drizzle-zod@0.5.1",
    "pg": "npm:pg@^8.13.1",
  },
  "tasks": {
    "start": "deno run --allow-net main.ts"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  },
  "lint": {
    "rules": {
      "include": ["src/**/*.ts"],
      "exclude": ["tests/**/*"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/**/*.ts"],
      "exclude": ["tests/**/*"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "always"
    }
  }
}
